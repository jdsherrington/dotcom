---
import BaseLayout from "../layouts/BaseLayout.astro";
import ProjectCard from "../components/ProjectCard.astro";

const allProjects = (await Astro.glob("./projects/*.md")).sort(
	(b, a) => b.frontmatter.id - a.frontmatter.id,
);

const pageTitle = "Projects";
---

<BaseLayout pageTitle={pageTitle}>
	<section
		class="grid w-[var(--full-w)] grid-cols-[auto] grid-rows-[min-content] items-start gap-[var(--guide-gutter)] pb-96"
	>
		<div
			class="grid grid-flow-row gap-[var(--guide-gutter)] place-self-center sm:w-(--full-w) sm:grid-cols-1 md:grid-cols-2 lg:w-(--full-w) lg:grid-cols-3"
		>
			{
				allProjects.map((project) => {
					return (
						<ProjectCard
							id={project.frontmatter.id}
							title={project.frontmatter.title}
							category={project.frontmatter.category}
							description={project.frontmatter.description}
							url={project.url}
							tags={project.frontmatter.tags}
							iconPath={project.frontmatter.iconPath}
							imagePath={project.frontmatter.imagePath}
							imageAlt={project.frontmatter.imageAlt}
							accentColor={project.frontmatter.accentColor}
						/>
					);
				})
			}
		</div>
	</section>
</BaseLayout>
