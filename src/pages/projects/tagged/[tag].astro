---
import { getCollection } from "astro:content";
import type { CollectionEntry } from "astro:content";

import BaseLayout from "@/layouts/BaseLayout.astro";
import ProjectCard from "@/components/ProjectCard.astro";

type Project = CollectionEntry<"projects">;

import NavigationButton from "@/components/NavigationButton.astro";

export async function getStaticPaths() {
	const awaitProjects = await getCollection("projects");
	const projects = awaitProjects.sort(
		(a: Project, b: Project) => b.data.order - a.data.order,
	);
	const uniqueTags = [
		...new Set(
			projects
				.map((project: { data: { tags: any } }) => project.data.tags)
				.flat(),
		),
	];

	return uniqueTags.map((tag: any) => {
		const filteredProjects = projects.filter(
			(project: { data: { tags: string | any[] } }) =>
				project.data.tags.includes(tag),
		);
		const cleanedTag = tag.toLowerCase().replaceAll(" ", "-");
		return {
			params: { tag: cleanedTag },
			props: { projects: filteredProjects },
		};
	});
}

const { tag } = Astro.params;
const { projects } = Astro.props;
---

<BaseLayout
	pageTitle=`JDS // ${tag.toLowerCase().replace(/\b(\s\w|^\w)/g, function (text: any) { return text.toUpperCase(); })} Projects`
	`
>
	<section
		class="w-col-full relative flex flex-col place-items-center place-self-center"
	>
		<div
			class="tag-controls border-border-background sticky top-[calc(var(--true-nav-height)-1px)] z-999 flex h-[calc(100%-1px)] w-[calc(100%-2px)] place-items-center border-b bg-[oklch(var(--background-primary)/calc(var(--true-nav-opacity)-0.15))] backdrop-blur-xl transition-all duration-0 ease-in-out"
		>
			<a href="javascript:void(0)" onclick="history.back()" class="h-10">
				<NavigationButton
					text="Back"
					class="arrow-left text-foreground/50 border-border-background md:hover:bg-accent-foreground/10 md:hover:text-accent-foreground relative h-full w-auto cursor-pointer rounded-sm border-r px-3 transition-colors duration-200 ease-in-out *:h-3.5"
				/>
			</a>

			<span
				class="card-tag border-border-background before:ease-flicker ease-flicker text-foreground/60 relative flex h-10 place-items-center gap-1 border-r pr-3 pl-3.5 font-mono text-xs tracking-widest uppercase transition-colors duration-200 before:pointer-events-none before:absolute before:-top-[0px] before:-left-[1px] before:mt-[calc(var(--true-nav-opacity)*1px)] before:h-[calc(100%+1px+(0px-(var(--true-nav-opacity)*1px)))] before:w-[calc(100%+2px)] before:border before:border-transparent before:transition-colors before:duration-200 before:content-[''] sm:py-2 md:py-1.5 has-[.tag-close-link:hover]:md:bg-red-400/10 has-[.tag-close-link:hover]:md:text-red-300 has-[.tag-close-link:hover]:md:before:border-red-400"
				>{tag.replaceAll("-", " ")}<a
					href="/projects"
					class="tag-close-link ease-flicker pointer-events-auto stroke-red-400 transition-colors duration-200 select-auto hover:md:stroke-red-300"
					><svg
						xmlns="http://www.w3.org/2000/svg"
						viewBox="0 0 24 24"
						stroke-width="2"
						stroke-linecap="round"
						stroke-linejoin="round"
						class="tag-close-button h-auto w-5"
					>
						<path d="M 18 6 L 6 18 M 6 6 L 18 18"></path>
					</svg></a
				>
			</span>
		</div>

		<div
			id="tagged-projects"
			class="sm:grid-cols-1fr grid w-full grid-flow-row pb-96 md:grid-cols-2 lg:grid-cols-3"
		>
			{
				projects.map((project: Project) => (
					<ProjectCard
						id={project.id}
						title={project.data.title}
						category={project.data.category}
						description={project.data.description}
						url={project.data.url}
						repo={project.data.repo}
						tags={project.data.tags}
						iconPath={project.data.iconPath}
						iconAlt={project.data.imageAlt}
					/>
				))
			}
		</div>
	</section>
</BaseLayout>
